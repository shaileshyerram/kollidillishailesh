@inherits System.Web.Mvc.WebViewPage<dynamic>
@{
    ViewBag.Title = "Notification";
}
@*<link href="@Url.Content("~/Content/Styles/SMSNotification.css")" rel="stylesheet" type="text/css"/>*@

<br />
<br />
<div>
    <div class="leftPanel tree pull-left shadowBox">
        <div class="treeContainer">
            <ul class="gridData" style="display:none;">
                <li id="1">
                    All Students
                    <ul>
                        <li id="2">LKG</li>
                        <li id="3">UKG</li>
                        <li id="4">UKG</li>
                        <li id="5">
                            Class I
                            <ul>
                                <li id="6">Section A</li>
                                <li id="7">Section B</li>
                            </ul>
                        </li>
                        <li id="8">
                            Class II
                            <ul>
                                <li id="9">Section A</li>
                                <li id="10">Section B</li>
                            </ul>
                        </li>
                    </ul>
                </li>
                <li id="11">All teaching staff</li>
                <li id="12">All non teaching staff</li>
            </ul>
        </div>
    </div>
    <div class="rightPanel notificationContent pull-right shadowBox">

        <div class="notificationResponse"></div>
        <br />
        <form id="notificationForm" class="form-horizontal" role="form">
            <div class="form-group">
                <label class="col-md-2 control-label" for="phoneNumber">Mobile number</label>
                <div class="col-md-10">
                    <textarea class="form-control" rows="2" cols="75" name="phoneNumber" placeholder="Enter phone numbers separated by comma"></textarea>
                </div>
            </div>
            <div class="form-group lookUp">
                <a class="student expandCollapse collapsed" data-toggle="collapse">
                    Student Look Up
                </a>
                <div class="student panel-collapse collapse">
                    <label class="col-md-2 control-label" for="firstName">First Name</label>
                    <div class="col-md-4">
                        <input class="form-control" id="Name" name="firstName" type="text" value="">
                    </div>
                    <label class="col-md-2 control-label" for="lastName">Last Name</label>
                    <div class="col-md-4">
                        <input class="form-control" id="Name" name="lastName" type="text" value="">
                    </div>
                </div>
            </div>
            <div class="form-group lookUp">
                <a class="staff expandCollapse collapsed" data-toggle="collapse">
                    Staff Look Up
                </a>
                <div class="staff panel-collapse collapse">
                    <label class="col-md-2 control-label" for="firstName">First Name</label>
                    <div class="col-md-4">
                        <input class="form-control" id="Name" name="firstName" type="text" value="">
                    </div>
                    <label class="col-md-2 control-label" for="lastName">Last Name</label>
                    <div class="col-md-4">
                        <input class="form-control" id="Name" name="lastName" type="text" value="">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label" for="message">Message</label>
                <div class="col-md-10">
                    <textarea class="form-control" rows="5" cols="75" name="message"></textarea>
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-5 col-md-10">
                    <input type="submit" value="Submit" id="submit" class="btn btn-success" data-url="@Url.Action("SendNotification", "Notification")">
                    <input type="reset" value="Reset" id="reset" class="btn btn-success">
                </div>
            </div>
        </form>
    </div>
</div>