
@{
    ViewBag.Title = "Notification";    
}

<h2>Send Notification</h2>
<br/>
<div class="notificationContent">
    <form id="notificationForm" class="form-horizontal" role="form">
        <div class="form-group">
            <label class="col-md-2 control-label" for="phoneNumber">Mobile number</label>
            <div class="col-md-10">
                <textarea rows="2" cols="75" name="phoneNumber" placeholder="Enter phone numbers separated by comma"></textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label" for="message">Message</label>
            <div class="col-md-10">
                <textarea rows="10" cols="75" name="message"></textarea>
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" id="submit" class="btn btn-primary" data-url="@Url.Action("SendNotification", "Notification")">
                <input type="reset" value="Reset" id="reset" class="btn btn-primary">
            </div>
        </div>
    </form>
</div>