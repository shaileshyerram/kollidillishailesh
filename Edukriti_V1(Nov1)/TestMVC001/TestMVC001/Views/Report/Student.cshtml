@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Report";
    var isStudent = User.IsInRole("Student");
}
<div class="report">
    <div class="panel panel-primary">
        <div class="panel-heading">Student Attendance Report</div>
        <div class="panel-body">
            <form id="reportForm" class="form-horizontal" role="form">
                <br />
                @if (!isStudent)
                {
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="Name">Name</label>
                        <div class="col-md-8">
                            <input class="form-control" id="Name" name="Name" type="text" value="">
                        </div>
                    </div>
                }
                <div class="form-group">
                    <label class="col-md-2 control-label" for="Class">Class</label>
                    <div class="col-md-3">
                        <select class="form-control" data-val="true" id="Class" name="Class">
                            <option value="">All</option>
                            <option>I</option>
                            <option>II</option>
                            <option>III</option>
                            <option>IV</option>
                            <option>V</option>
                            <option>VI</option>
                            <option>VII</option>
                            <option>VIII</option>
                            <option>IX</option>
                            <option>X</option>
                        </select>
                    </div>
                    <label class="col-md-2 control-label" for="Section">Section</label>
                    <div class="col-md-3">
                        <input class="form-control" id="Section" name="Section" type="text" value="">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="fromDatepicker">Date From</label>
                    <div class="col-md-3">
                        <input class="form-control" name="dateFrom" type="text" id="fromDatepicker">
                    </div>
                    <label class="col-md-2 control-label" for="toDatepicker">Date To</label>
                    <div class="col-md-3">
                        <input class="form-control" name="dateTo" type="text" id="toDatepicker">
                    </div>
                </div>
                <div class="form-group" id="buttons">
                    <div class="col-md-offset-4 col-md-10">
                        <input type="submit" value="Submit" id="submit" class="btn btn-primary center" data-url="@Url.Action("GetReport", "Report")">
                        <input type="reset" value="Reset" id="reset" class="btn btn-primary center">
                    </div>
                </div>
            </form>
        </div>
    </div>
    <br />
    <div class="reportData"></div>
    <br />
    <button class="btnExport hide btn btn-primary">Export to excel</button>
    <input type="hidden" value="Student" id="Category" />
</div>
